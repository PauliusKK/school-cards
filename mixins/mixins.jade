        img(src=imgsrc, alt="")
        h4 #{strong}
        p #{normal}

mixin faq-question(strong, normal)
    .question
        h4 #{strong}
        p #{normal}

mixin step-li(strong, normal)
    li <strong>#{strong}</strong> #{normal}